<!DOCTYPE html>
<html>
  <head>
    <title><%= page_title(yield(:pg_title)) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash.any? %>
      <% flash.each do |type, message| %>
        <p><%= message %></p>
      <% end %>
    <% end %>
    <%= yield %>
  </body>
</html>
