<% provide(:pg_title, "Search") %>
<div class="jumbotron text-center">
    <h1>Search Flickr</h1>


<div class="row justify-content-center">
    <div class="my-3">
        <%= form_with url: root_path, local: true, class: "form-signin" do |f| %>
            <%= text_field_tag "search[username]", "", placeholder:"Username", class: "form-control my-1" %>
            <%= f.submit "Search", class: "btn btn-primary btn-block my-1" %>
        <% end %>
    </div>
</div>
</div>


<div  class="d-flex flex-row mb-3 flex-wrap justify-content-around align-items-center">
    <% if @flickr_user && @flickr_user.valid? %>
        <% if @flickr_user.photos.nil? %>
            <p>This user hasnt posted any photos. Maybe theyre private.</p>
        <% else %>
            <%= render "all_photos" %>
        <% end %>
    <% end %>
</div>